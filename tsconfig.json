{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "isolatedModules": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitReturns": true
  },
  "include": ["src/**/*", "src/**/*.test.ts"]
}
